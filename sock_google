#include<stdio.h>
#include<stdlib.h>
#include<unistd.h>
#include<netinet/in.h>
#include<sys/socket.h>
#include<sys/types.h> //for send()
#include<string.h> //strlen
#include <arpa/inet.h> //inet_addr

int main() {
  int ms;
  ms = socket(AF_INET, SOCK_STREAM, 0);
  
  struct sockaddr_in add;
  add.sin_family = AF_INET;
  add.sin_port = htons(80);
  //add.sin_addr.s_addr = inet_aton("192.168.1.100");  //ntoa opposite of inet_addr

  if (inet_aton("192.168.1.100", &add.sin_addr.s_addr ) == 0) {
        printf("iten_aton not working\n");
        exit(-1);
    }

  int stat_c = connect(ms, (struct sockaddr*) &add, sizeof(add));
  if (stat_c == -1) {
    printf("Connection failed\n");
  }

//Send some data
  message = "GET / HTTP/1.1\r\n\r\n";
  if( send(ms , message , strlen(message) , 0) < 0)
  {
    puts("Send failed");
    return 1;
  }
  
  puts("Data Send\n");  
  
  char server_reply[2000];
  //Receive a reply from the server
  if( recv(ms, server_reply , 2000 , 0) < 0) {
    puts("recv failed");
  }

  puts("Reply received\n");
  puts(server_reply);
	
  close(ms);

  return 0;
}
